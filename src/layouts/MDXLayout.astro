---
import DocsLayout from './DocsLayout.astro'
import type { CollectionEntry } from 'astro:content'
import Callout from '@components/MDXComponents.svelte'
import * as MDXComponents from '@components/mdx'

interface Props {
  entry: CollectionEntry<'docs'>
}

const { entry } = Astro.props
const { Content } = await entry.render()

// Make components available to MDX files
const components = { Callout, ...MDXComponents }
---

<DocsLayout title={entry.data.title} description={entry.data.description}>
  <div class="prose dark:prose-invert max-w-none">
    <h1 class="mb-8">
      {entry.data.group && (
        <span class="text-gray-500 dark:text-gray-400">{entry.data.group} / </span>
      )}
      {entry.data.title}
    </h1>
    <Content components={components} />
  </div>
</DocsLayout>