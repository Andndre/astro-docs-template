---
import DocsLayout from './DocsLayout.astro'
import type { CollectionEntry } from 'astro:content'
import * as MDXComponents from '@components/mdx'

interface Props {
  entry: CollectionEntry<'docs'>
}

const { entry } = Astro.props
const { Content } = await entry.render()
---

<DocsLayout title={entry.data.title} description={entry.data.description}>
  <div class="prose dark:prose-invert max-w-none">
    <div class="text-[15px] leading-[19.6px] tracking-[-0.0045em] font-normal text-[#666687] mb-8">
      {entry.data.group && (
        <span>{entry.data.group} / </span>
      )}
      <span class="text-[#2D2D31] dark:text-white">{entry.data.title}</span>
    </div>
    <Content components={MDXComponents} />
  </div>
</DocsLayout>